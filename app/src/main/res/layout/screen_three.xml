<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#009688"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#FFF"
        android:id="@+id/tedious_tracking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="Sit back and relax"
        android:textSize="25sp"
        />

    <ImageView
        android:id="@+id/tedious_tracking_image"
        android:layout_centerInParent="true"
        android:layout_below="@+id/tedious_tracking"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/relax" />

    <TextView
        android:textColor="#FFF"
        android:layout_below="@+id/tedious_tracking_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="Say Hello to Notification Manager"
        android:textSize="14sp"
        />

</RelativeLayout>