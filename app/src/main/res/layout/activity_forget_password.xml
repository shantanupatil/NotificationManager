<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.shantanupatil.notificationmanager.Model.ForgetPassword">


    <LinearLayout
        android:padding="20dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/forget_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Forget Password?"
            android:textSize="29dp"
            android:textColor="#333"/>

        <TextView
            android:id="@+id/forget_text_description"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:textColor="#706f6f"
            android:layout_marginBottom="60dp"
            android:text="Enter the email address using which you've registered to the application. We will send you an email, follow instructions provided in email to reset your password."/>


        <EditText
            android:inputType="textEmailAddress"
            android:background="@drawable/edittextborders"
            android:id="@+id/forget_email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:hint="Email" />

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:text="Send Email"
            android:background="@drawable/primarybutton"
            android:textColor="#fff"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/forget_email"
            android:layout_height="48dp"
            app:spinning_bar_width="2dp"
            app:spinning_bar_color="#FFF"
            android:textSize="16sp"
            app:spinning_bar_padding="6dp"
            android:id="@+id/forget_email_button"/>


    </LinearLayout>

</LinearLayout>
