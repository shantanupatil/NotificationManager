<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.shantanupatil.notificationmanager.About">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/layout_guide"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardMaxElevation="4dp"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@color/colorPrimary"/>

                    <ImageView
                        android:src="@drawable/guide"
                        android:id="@+id/image_guide"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="120dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/guide_name"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/image_guide"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanjay Khajure"/>

                    <TextView
                        android:id="@+id/guide_Desc"
                        android:layout_centerHorizontal="true"
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/guide_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Project Guide)"/>

                    <ImageView
                        android:id="@+id/guide_email"
                        android:layout_below="@+id/guide_Desc"
                        android:layout_margin="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/email"/>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_shantanu"
            android:layout_below="@+id/layout_guide"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardMaxElevation="4dp"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@color/colorPrimary"/>

                    <ImageView
                        android:src="@drawable/shantanu"
                        android:id="@+id/image_shantanu"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="120dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/name_shantanu"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/image_shantanu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shantanu P. Patil"/>

                    <TextView
                        android:id="@+id/shantanu_Desc"
                        android:layout_centerHorizontal="true"
                        android:textSize="13sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/name_shantanu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(Team Leader)"/>

                    <ImageView
                        android:id="@+id/shantanu_linkedIn"
                        android:layout_below="@+id/shantanu_Desc"
                        android:layout_margin="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/linkedin"/>

                    <ImageView
                        android:id="@+id/shantanu_email"
                        android:layout_toLeftOf="@id/shantanu_linkedIn"
                        android:layout_below="@+id/shantanu_Desc"
                        android:layout_margin="7dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/email"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pranali"
            android:layout_below="@+id/layout_shantanu"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardMaxElevation="4dp"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@color/colorPrimary"/>

                    <ImageView
                        android:src="@drawable/pranali"
                        android:id="@+id/image_pranali"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="120dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/name_pranali"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/image_pranali"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pranali G. Kalambe"/>

                    <ImageView
                        android:id="@+id/pranali_linkedIn"
                        android:layout_below="@+id/name_pranali"
                        android:layout_margin="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/linkedin"/>

                    <ImageView
                        android:id="@+id/pranali_email"
                        android:layout_toLeftOf="@id/pranali_linkedIn"
                        android:layout_below="@+id/name_pranali"
                        android:layout_margin="7dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/email"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_akshay"
            android:layout_below="@+id/layout_pranali"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardMaxElevation="4dp"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@color/colorPrimary"/>

                    <ImageView
                        android:src="@drawable/akshay"
                        android:id="@+id/image_akshay"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="120dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/name_akshay"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/image_akshay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Akshay R. Chatur"/>

                    <ImageView
                        android:id="@+id/akshay_linkedIn"
                        android:layout_below="@+id/name_akshay"
                        android:layout_margin="7dp"
                        android:layout_alignParentRight="true"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/linkedin"/>

                    <ImageView
                        android:id="@+id/akshay_email"
                        android:layout_toLeftOf="@id/akshay_linkedIn"
                        android:layout_below="@+id/name_akshay"
                        android:layout_margin="7dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/email"/>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_tapan"
            android:layout_below="@+id/layout_akshay"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                app:cardMaxElevation="4dp"
                app:cardCornerRadius="4dp"
                app:cardUseCompatPadding="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:src="@color/colorPrimary"/>

                    <ImageView
                        android:src="@drawable/tapan"
                        android:id="@+id/image_tapan"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="120dp"
                        android:layout_centerHorizontal="true"/>

                    <TextView
                        android:id="@+id/name_tapan"
                        android:layout_centerHorizontal="true"
                        android:textSize="18sp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/image_tapan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tapan N. Lokhande"/>

                    <!--<ImageView-->
                        <!--android:id="@+id/tapan_linkedIn"-->
                        <!--android:layout_below="@+id/name_tapan"-->
                        <!--android:layout_margin="7dp"-->
                        <!--android:layout_alignParentRight="true"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:src="@drawable/linkedin"/>-->

                    <!--<ImageView-->
                        <!--android:id="@+id/tapan_email"-->
                        <!--android:layout_toLeftOf="@id/tapan_linkedIn"-->
                        <!--android:layout_below="@+id/name_tapan"-->
                        <!--android:layout_margin="7dp"-->
                        <!--android:layout_width="30dp"-->
                        <!--android:layout_height="30dp"-->
                        <!--android:src="@drawable/email"/>-->


                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
