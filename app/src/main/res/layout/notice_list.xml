<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="2dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardElevation="7dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativelayout_notice"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/notice_intro"
                    android:layout_marginTop="10dp"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:elevation="4dp"
                        android:src="@drawable/tnpvector"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_marginLeft="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/staffName"
                            android:layout_marginLeft="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Staff Name"
                            android:maxLines="1"
                            android:fontFamily="sans-serif"
                            android:textColor="#333"
                            android:textSize="17sp"/>

                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="7dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/ic_date_range_black_48dp"
                                android:layout_width="10dp"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/time_notice"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28 Jan 2018"
                                android:textSize="10sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/notice_intro"
                    android:id="@+id/image_notice"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorPrimary"/>


                <LinearLayout
                    android:id="@+id/title_description"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/image_notice"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingTop="0dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/notice_list_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Some Company is Visiting on 24 Jan 2018"
                        android:maxLines="1"
                        android:textSize="18sp"/>

                    <TextView
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:id="@+id/notice_list_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Some Random Title here Just to test if it is working"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="15sp"/>
                </LinearLayout>

                <!--<RelativeLayout-->
                <!--android:layout_below="@+id/title_description"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="50dp">-->

                <!--<ImageView-->
                <!--android:layout_marginLeft="8dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_width="50dp"-->
                <!--android:layout_height="50dp"-->
                <!--android:padding="10dp"-->
                <!--android:alpha="0.7"-->
                <!--android:src="@drawable/ic_favorite_border_black_48dp"/>-->

                <!--</RelativeLayout>-->

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>