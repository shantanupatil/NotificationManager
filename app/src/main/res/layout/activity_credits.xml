<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.shantanupatil.notificationmanager.Credits">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textSize="18sp"
            android:id="@+id/credits_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/credits_string"/>

        <TextView
            android:id="@+id/icons_header"
            android:textColor="#333"
            android:fontFamily="sans-serif"
            android:textSize="22sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/credits_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Icons"/>

        <TextView
            android:id="@+id/credits_links"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/icons_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
