<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffefe"
    tools:context="in.shantanupatil.notificationmanager.Model.RegisterActivity">

    <LinearLayout
        android:gravity="center"
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:text="Register Using Email"
            android:textAlignment="center"
            android:layout_marginBottom="45dp"
            android:textColor="#333"/>


        <EditText
            android:background="@drawable/edittextborders"
            android:id="@+id/register_email"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:hint="Email" />


        <EditText
            android:background="@drawable/edittextborders"
            android:layout_marginTop="20dp"
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/register_email"
            android:layout_alignStart="@+id/register_email"
            android:layout_below="@+id/register_email"
            android:focusableInTouchMode="true"
            android:inputType="textAutoComplete"
            android:singleLine="true"
            android:hint="Full Name"/>


        <EditText
            android:background="@drawable/edittextborders"
            android:layout_marginTop="20dp"
            android:id="@+id/register_password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:layout_alignLeft="@+id/fullName"
            android:layout_alignStart="@+id/fullName"
            android:layout_below="@+id/fullName"
            android:inputType="textPassword"
            android:hint="Password"/>

        <Spinner
            android:layout_marginTop="20dp"
            android:id="@+id/branch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            />

        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
            android:id="@+id/register"
            android:layout_below="@+id/branch"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/primarybutton"
            android:textColor="#FFF"
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="16sp"
            app:spinning_bar_width="2dp"
            app:spinning_bar_color="#FFF"
            app:spinning_bar_padding="6dp" />

    </LinearLayout>

</LinearLayout>
