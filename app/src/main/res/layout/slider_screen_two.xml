<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#9C27B0"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="#FFF"
        android:textSize="25sp"
        android:id="@+id/tedious_tracking"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Training and Placement"
        android:textAlignment="center"

        />

    <ImageView
        android:id="@+id/tedious_tracking_image"
        android:layout_below="@+id/tedious_tracking"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/companyvisited"
        android:layout_centerInParent="true"/>

    <TextView
        android:textColor="#FFF"
        android:layout_below="@id/tedious_tracking_image"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:textAlignment="center"
        android:text="@string/screen_two" />

</RelativeLayout>