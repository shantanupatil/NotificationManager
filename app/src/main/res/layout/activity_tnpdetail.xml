<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="in.shantanupatil.notificationmanager.TandP.RetriveInformation.TNPDetail">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tnp_detail_linear_layout"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:src="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/image_tnp_detail"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/share_app_detail_tnp"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circle"
            android:layout_marginTop="205dp"
            android:layout_width="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_share_white_24dp"
            android:layout_height="50dp" />

        <LinearLayout
            android:layout_below="@+id/share_app_detail_tnp"
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:enabled="true"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"
                android:id="@+id/detail_title_tnp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Title"
                android:textSize="23sp" />

            <View
                android:layout_marginTop="35dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e2e2"/>

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="18sp"/>

            <View
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#e2e2e2"/>

            <TextView
                android:enabled="true"
                android:textIsSelectable="true"
                android:focusable="true"
                android:longClickable="true"
                android:id="@+id/detail_description_tnp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:layout_marginTop="15dp"
                android:textSize="15sp"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
