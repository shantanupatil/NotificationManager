<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="280dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:padding="2dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            app:cardElevation="7dp"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true"
            android:layout_width="320dp"
            android:layout_height="280dp">


            <RelativeLayout
                android:id="@+id/relativelayout_notice"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/notice_intro"
                    android:paddingTop="10dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:elevation="4dp"
                        android:src="@drawable/tnpvector"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_marginLeft="9dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp">

                        <TextView
                            android:id="@+id/staffName"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Staff Name"
                            android:maxLines="1"
                            android:fontFamily="sans-serif"
                            android:textColor="#333"
                            android:textSize="17sp"/>

                        <LinearLayout
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_gravity="center"
                                android:src="@drawable/ic_date_range_black_48dp"
                                android:layout_width="10dp"
                                android:layout_height="10dp" />

                            <TextView
                                android:id="@+id/time_notice"
                                android:layout_gravity="center"
                                android:layout_marginLeft="3dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="28 Jan 2018"
                                android:textSize="10sp"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_below="@+id/notice_intro"
                    android:id="@+id/image_notice"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:scaleType="centerCrop"
                    android:src="@color/colorPrimary"/>


                <TextView
                    android:layout_marginLeft="13dp"
                    android:maxLines="1"
                    android:textSize="17sp"
                    android:layout_below="@+id/image_notice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:id="@+id/notice_list_title"
                    android:text="Some Notice for You"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>